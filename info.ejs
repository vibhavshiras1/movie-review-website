                    this.state.rating1 = val;
                    document.getElementById('demo').innerHTML = "Your Rating : "+this.state.rating1+"/10";
                }
                ratefunc1=function(){
                    var val = document.getElementById('rating1').value;
                    this.state.rating2 = val;
                    document.getElementById('demo1').innerHTML = "Your Rating : "+this.state.rating2+"/10";
