    <style>
        body, html{
    height: 100%;
    margin: 0;
}
.heading1{
    color: white;
    font-size: 40px;
    background-color: darkblue;
    width: 100%;
    position: sticky;
}
.image1{
    height: 300px;
    width: 180px;
    left: 20px;
    position: absolute;
}
.heading2{
    position: absolute;
    left: 220px;
    color: white;
    font-size: 30px;
}
